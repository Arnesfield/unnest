{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "lib",
    "lib": ["ES2017"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "esModuleInterop": true,
    "preserveConstEnums": true
  },
  "include": ["**/*", "src/**/*"],
  "exclude": ["node_modules", "lib", "tmp", "**/*.spec.ts"]
}
